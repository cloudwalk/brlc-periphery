{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": true,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "semi": true,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "endOfLine": "lf"
      }
    }
  ]
}
